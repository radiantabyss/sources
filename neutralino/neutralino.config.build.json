{
    "$schema": "https://raw.githubusercontent.com/neutralinojs/neutralinojs/main/schemas/neutralino.config.schema.json",
    "applicationId": "ra-neutralino",
    "applicationName": "ra-neutralino",
    "applicationIcon": "./front/images/favicon.png",
    "author": "RadiantAbyss",
    "description": "ra-neutralino",
    "copyright": "Copyright Â© RadiantAbyss.com. All rights reserved.",
    "version": "1.0.0",
    "defaultMode": "window",
    "port": 0,
    "documentRoot": "/front",
    "url": "/",
    "enableServer": true,
    "enableNativeAPI": true,
    "tokenSecurity": "one-time",
    "logging": {
        "enabled": true,
        "writeToLogFile": true
    },
    "nativeAllowList": [
        "app.*",
        "filesystem.*",
        "os.*",
        "computer.*",
        "debug.log",
        "storage.*",
        "window.*"
    ],
    "modes": {
        "window": {
            "title": "ra-neutralino",
            "width": 1200,
            "height": 700,
            "hidden": true,
            "fullScreen": false,
            "alwaysOnTop": false,
            "icon": "./front/images/favicon.png",
            "enableInspector": false,
            "borderless": false,
            "maximize": false,
            "exitProcessOnClose": false
        }
    },
    "cli": {
        "binaryName": "ra-neutralino",
        "binaryVersion": "6.3.0",
        "clientVersion": "6.3.0",
        "resourcesPath": "./front/",
        "clientLibrary": "./front/neutralino.js"
    },
    "globalVariables": {
        "ENABLE_TRAY": true,
        "AUTOUPDATE_MANIFEST_URL": "https://ra-neutralino/desktop-app-manifest"
    }
}
